# Local Development Environment Configuration
# Copy this file to .env and update with your Local by Flywheel credentials

# Environment (use 'development' for local)
WP_ENV=development

# Local URLs (update 'shaganplaatjies-local' to match your Local site name)
WP_HOME=http://shaganplaatjies-local.local
WP_SITEURL=${WP_HOME}/wp

# Database Credentials
# Get these from Local by Flywheel â†’ Database tab
# Default values for Local by Flywheel:
DB_HOST=localhost
DB_NAME=local
DB_USER=root
DB_PASSWORD=root

# Security Keys
# Generate these at: https://roots.io/salts.html
# IMPORTANT: Use different keys for local, staging, and production
AUTH_KEY='generate-your-own-unique-key'
SECURE_AUTH_KEY='generate-your-own-unique-key'
LOGGED_IN_KEY='generate-your-own-unique-key'
NONCE_KEY='generate-your-own-unique-key'
AUTH_SALT='generate-your-own-unique-key'
SECURE_AUTH_SALT='generate-your-own-unique-key'
LOGGED_IN_SALT='generate-your-own-unique-key'
NONCE_SALT='generate-your-own-unique-key'

# Debug Settings (ALWAYS true in local development)
WP_DEBUG=true
WP_DEBUG_DISPLAY=true
WP_DEBUG_LOG=true
SCRIPT_DEBUG=true

# Optional: Disable automatic updates locally
AUTOMATIC_UPDATER_DISABLED=true
WP_AUTO_UPDATE_CORE=false
