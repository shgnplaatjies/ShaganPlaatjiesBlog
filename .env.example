# WordPress Bedrock Environment Configuration
# Copy this file to .env and update values for your environment

# WordPress Environment
WP_ENV=development
WP_HOME=http://shaganplaatjies-theme.local
WP_SITEURL=${WP_HOME}/app

# Database Configuration
DB_HOST=localhost
DB_NAME=shaganplaatjies_db
DB_USER=root
DB_PASSWORD=root
DB_PREFIX=wp_

# Security Keys & Salts
# Generate new values at https://roots.io/salts.html
AUTH_KEY='put your unique phrase here'
SECURE_AUTH_KEY='put your unique phrase here'
LOGGED_IN_KEY='put your unique phrase here'
NONCE_KEY='put your unique phrase here'
AUTH_SALT='put your unique phrase here'
SECURE_AUTH_SALT='put your unique phrase here'
LOGGED_IN_SALT='put your unique phrase here'
NONCE_SALT='put your unique phrase here'

# WordPress Configuration
WP_DEBUG=true
WP_DEBUG_LOG=true
WP_DEBUG_DISPLAY=false
SCRIPT_DEBUG=true
WP_DISABLE_FATAL_ERROR_HANDLER=true

# Theme Configuration
# Theme Options (if using ACF)
THEME_CONTACT_EMAIL=info@shaganplaatjies.co.za
THEME_CONTACT_PHONE=+27 (0)XX XXX XXXX
THEME_CONTACT_ADDRESS=123 Main Street, City, Province, 0000, South Africa

# API Keys (if using any external APIs)
# MAILGUN_API_KEY=
# SENDGRID_API_KEY=
# RECAPTCHA_SITE_KEY=
# RECAPTCHA_SECRET_KEY=

# Development Tools
# Local by Flywheel specific
DB_PATH=./app/bedrock

# WP-CLI Configuration
WP_CLI_ALLOW_ROOT=true

# AWS S3 Configuration (if using S3 for media)
# AWS_S3_BUCKET=
# AWS_S3_KEY=
# AWS_S3_SECRET=
# AWS_S3_REGION=

